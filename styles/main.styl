/* iPad [portrait + landscape] */
@media only screen and (max-width: 950px)
	.shell .content 
		h1
			font-size 42px
			margin-bottom 10px
			
		.screens
			top 90px
			
	table.positions
		.market-value, .gain-loss
			display none

/* iPhone [portrait + landscape] */
@media only screen and (max-width: 480px)
	.shell
		position static
		
		.content
			position static
			margin 0

			h1
				font-size 30px
				
			.control-bar
				height auto
				
				.screen-list
					float none
			
				input.add-symbol
					float none
					
			.screens
				clear both
				position static
				height 250px
				overflow scroll
			
		.sidebar
			position static
			width auto
			
			.details
				position static
				
				.detail-widget .chart
					width auto
			
	table.positions
		.shares, .cost-basis
			display none