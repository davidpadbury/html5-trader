	background-size(100%, 100%)

a
	text-decoration none

.shell
	content-margin = 10px

	position absolute
	top 0; bottom 0
	left 0; right 0
	width 100%
	height 100%

	overflow hidden

	.content
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		margin-left 10px
		margin-right 320px
		
		html.ie6 &
			right 330px
		
		h1
			html.csstransforms &
				-webkit-animation-name header-drop
				-webkit-animation-duration 1.5s
			

		.control-bar
			margin 0 0
			height 45px

			.screen-list
				pretty-list()
				background-color #2175B8
				float left
				text-align center
			
			input.add-symbol
				float right
				background-color transparent
				border solid 1px #fff
				padding 6px
				border-radius(12px)
				font-size 12px
				color #fff
			

				&:-moz-placeholder
					color #fff
				&::-webkit-input-placeholder
					color #fff
			
		

		.screens
			position absolute
			top (64px+45px+25px)
			bottom 10px
			left 10px
			right 0
			
			html.ie6 &
				right 330px
			
			.screen
				position absolute
				top 0
				bottom 0
				left 0
				right 0
				
				html.ie6 &
					right 330px
					position static
					

			html.no-csstransforms.no-csstransforms3d &
				.screen
					display: none;

					&.front, &.initial
						display: block;

			html.csstransforms.no-csstransforms3d &
				overflow: hidden;

				.screen
					-webkit-transition -webkit-transform 1s
					-moz-transition -moz-transform 1s
					-o-transition -o-transform 1s
					-ms-transition -ms-transform 1s
					transition transform 1s
					transform-it( scale(0) )
					transform-origin( 100% 100% )

					&.front, &.initial
						transform-origin( 0 0 )
						transform-it( scale(1) )

			html.csstransforms3d &
				-webkit-perspective: 1000;

				.screen
					display: none
					-webkit-transform-style: preserve-3d
					-webkit-box-sizing: border-box
					-webkit-backface-visibility: hidden

					&.front, &.back, &.initial
						display: block

					&.front
						-webkit-animation-name: move-front
						-webkit-animation-duration: 1.5s
						-webkit-transform: translateZ(0) rotateY(0)

					&.back
						-webkit-animation-name: move-back
						-webkit-animation-duration: 1.5s
						-webkit-transform: translateZ(-200px) rotateY(180deg)

	.sidebar
