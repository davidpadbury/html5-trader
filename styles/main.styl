			.icons
				pretty-list()
				background-color #607789
				text-align center

				li
					margin 0 5px
					a
						display inline-block
						text-indent -9999px
						width 17px
						height 17px

				li.chart
					background transparent url(/images/graph.png) no-repeat center center
			
				li.pie
					background transparent url(/images/pie.png) no-repeat center center


		.details
			position absolute
			top header-height
			bottom 0
			left 0
			right 0
			margin-top 10px
			padding 0
			
			font-size 11px
			
			overflow-y auto
			overflow-x hidden

			.detail-widget
				padding 10px
				border-bottom solid 1px white
				h1
					color #1B75BB
					font-size 11px
					margin-bottom 15px
				
				&:last-child
					border-bottom none

				.chart
					width sidebar-width - 35px
					height 150px

	table
		width 100%
		border-collapse separate
		border-spacing 0 2px

		th:first-child, td:first-child
			border-top-left-radius(5px)
			border-bottom-left-radius(5px)
		

		th:last-child, td:last-child
			border-top-right-radius(5px)
			border-bottom-right-radius(5px)
		

		tr
			th, td
				padding 8px
				text-align center


		thead
			tr
				color white

				th
					background-gradient(#757575, #000)

		tbody
			tr:nth-child(odd)
				td
					background-color rgba(255, 255, 255, 0.7)

			tr.selected
				td
					background-color rgba(153, 180, 198, 0.7)
		
			tr:hover
				td
					background-color rgba(197, 215, 229, 0.7)

